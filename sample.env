NODE_ENV=development

# postgres | mysql | mongodb | sqlite
DB_TYPE=sqlite

# Common (Postgres/MySQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=appdb
DB_USER=appuser
DB_PASSWORD=changeme

# Optional/common
DB_SSL=false
DB_POOL_MAX=10
DB_POOL_IDLE_MS=30000
DB_CONNECT_TIMEOUT_MS=5000

# MongoDB (if DB_TYPE=mongodb)
MONGODB_URI=
MONGODB_DB=appdb

# SQLite (if DB_TYPE=sqlite)
SQLITE_FILE=./database.sqlite

